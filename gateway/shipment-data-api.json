{
  "openapi": "3.0.4",
  "info": {
    "title": "nShift Shipment Data API",
    "description": "Provides access to shipment metadata from the nShift platform, including supported countries and currencies for shipping operations.",
    "version": "v1"
  },
  "servers": [
    {
      "url": "/track/shipmentdata/"
    }
  ],
  "paths": {
    "/Metadata/countries": {
      "get": {
        "operationId": "getCountries",
        "summary": "List supported countries",
        "description": "Returns all countries supported by the nShift shipping platform. Each entry contains a country code (ISO) and display name.",
        "tags": [
          "Metadata"
        ],
        "responses": {
          "200": {
            "description": "A list of supported countries",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MetadataItem"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - bearer token is missing or invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/Metadata/currencies": {
      "get": {
        "operationId": "getCurrencies",
        "summary": "List supported currencies",
        "description": "Returns all currencies supported by the nShift shipping platform. Each entry contains a currency code (e.g. EUR, USD, SEK) and display name.",
        "tags": [
          "Metadata"
        ],
        "responses": {
          "200": {
            "description": "A list of supported currencies",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MetadataItem"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - bearer token is missing or invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MetadataItem": {
        "type": "object",
        "description": "A metadata entry with a unique identifier and a human-readable name.",
        "properties": {
          "uuid": {
            "type": "string",
            "nullable": true,
            "description": "The unique identifier or code (e.g. ISO country code or currency code)"
          },
          "name": {
            "type": "string",
            "nullable": true,
            "description": "The human-readable display name"
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "description": "Standard RFC 7807 error response.",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true,
            "description": "A URI reference identifying the problem type"
          },
          "title": {
            "type": "string",
            "nullable": true,
            "description": "A short summary of the problem"
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true,
            "description": "The HTTP status code"
          },
          "detail": {
            "type": "string",
            "nullable": true,
            "description": "A detailed explanation of the problem"
          },
          "instance": {
            "type": "string",
            "nullable": true,
            "description": "A URI reference identifying the specific occurrence"
          }
        },
        "additionalProperties": {}
      }
    }
  }
}
